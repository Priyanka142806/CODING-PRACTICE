t=int(input())
while(t!=0):
    n=int(input())
    
    if((n/2)%2!=0):
        print("NO")
        t-=1
    else:
        print("YES")
        i=2
        for j in range(n//2):
            print(i)
            i+=2
            j+=1
        last=i-2
         
        i=1
        for j in range(n//2-1): 
            print(i)
            i+=2
        a=last+(n//2-1)
        print(a)
        
        t-=1
